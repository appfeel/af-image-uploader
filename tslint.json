{
    "extends": ["tslint-config-airbnb"],
    "rules": {
        "no-duplicate-variable": true,
        "no-unused-variable": [
          true
        ],
        "ter-indent": [true, 4, {"SwitchCase": true}],
        "max-line-length": [
            true,
            140
        ],
        "indent": [
            true,
            "spaces"
        ],
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "instance-field",
                    "static-method",
                    "instance-method"
                ]
            }
        ],
        "no-console": [
            true,
            "debug",
            "info",
            "time",
            "timeEnd",
            "trace"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-catch",
            "check-else",
            "check-whitespace"
        ],
        "prefer-const": true,
        "quotemark": [
            true,
            "single"
        ]
    }
}